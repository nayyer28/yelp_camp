<%layout('./layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form class="mb-4" action="/campgrounds" method="POST">
      <div class="form-group mb-2">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="campground[title]">
      </div>
      <div class="form-group mb-2">
        <label for="location">Location</label>
        <input type="text" class="form-control" id="location" name="campground[location]">
      </div>
      <div class="form-group mb-2">
        <label for="image">Image Url</label>
        <input type="text" class="form-control" id="image" name="campground[image]">
      </div>

      <div class="form-group mb-2">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="campground[description]"></textarea>
      </div>

      <label for="basic-url">Campground Price</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="price-label">$</span>
        </div>
        <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.0" aria-describedby="price-label">
      </div>
      <div class="mb-3">
        <button class="btn btn-success mt-4">Add Campground</button>
      </div>
    </form>
    <a href=" /campgrounds">All Campgrounds</a>
  </div>

</div>